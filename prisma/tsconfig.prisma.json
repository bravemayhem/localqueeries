{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es2017", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "..",
    "paths": {
      "@prisma/client": ["./node_modules/@prisma/client"],
      ".prisma/client": ["./node_modules/.prisma/client"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
} 